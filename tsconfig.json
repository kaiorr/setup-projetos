{
  "compilerOptions": {      
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                                    
     "outDir": "./dist",                       
     "rootDir": "./src",                               
    "removeComments": true,                            
     "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                      
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  },
  //utilização auto import, facilitar quando tem necessidade de importar vários arquivos
  "baseUrl": ".",
  "paths": {
    //exemplo de utilzação no padrão MVC
    "@controllers/*":["./src/controllers/*"],
    "@models/*":["./src/models/*"],
    "@views/*":["./src/views/*"],
    "@config/*":["./src/config/*"]
  },
  "include": [
    "src/**/*"
  ]
}
